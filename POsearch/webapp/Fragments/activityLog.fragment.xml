<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Activity Log" class="sapUiSizeCompact dialogStyle" contentWidth="25%" contentHeight="100%" showHeader="false">
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="Activity Log"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://decline" press="fncloseaddPo"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<HBox class="sapUiSizeCompact sapUiSmallMarginBegin sapUiSmallMarginTop">
				<core:Icon src="sap-icon://circle-task-2" class="openBlockStatus"/>
				<VBox class="dashLine"></VBox>
				<VBox class="poSearchactivitylogVBOX sapUiSmallMarginBottom sapUiTinyMarginBegin">
					<Label text="Open / Blocked" design="Bold" class="statusHeader"/>
					<HBox>
						<Label text="Date :"/>
						<Text text="20.04.2021" class="sapUiSmallMarginBegin"/>
					</HBox>
					<HBox>
						<Label text="PO Status :"/>
						<Text text="{mHeaderDetails>/Statusdesc}" class="sapUiSmallMarginBegin"/>
					</HBox>
				</VBox>
			</HBox>
			<HBox class="sapUiSizeCompact sapUiSmallMarginBegin">
				<core:Icon src="sap-icon://circle-task-2" class="ConfirmationstatusCSS"/>
				<VBox class="dashLine"></VBox>
				<VBox class="poSearchactivitylogVBOX sapUiSmallMarginBottom sapUiTinyMarginBegin">
					<Label text="Confirmation" design="Bold"/>
					<HBox>
						<Label text="Date :"/>
						<Text text="21.04.2021" class="sapUiSmallMarginBegin"/>
					</HBox>
					<HBox>
						<Label text="PO Status :"/>
						<Text text="{mHeaderDetails>/Statusdesc}" class="sapUiSmallMarginBegin"/>
					</HBox>
				</VBox>
			</HBox>
			<HBox class="sapUiSizeCompact sapUiSmallMarginBegin">
				<core:Icon src="sap-icon://circle-task-2" class="GoodsReceiptCSS"/>
				<VBox class="dashLine"></VBox>
				<VBox class="poSearchactivitylogVBOX sapUiSmallMarginBottom sapUiTinyMarginBegin">
					<Label text="Goods Receipt" design="Bold"/>
					<HBox>
						<Label text="Date :"/>
						<Text text="22.04.2021" class="sapUiSmallMarginBegin"/>
					</HBox>
					<HBox>
						<Label text="PO Status :"/>
						<Text text="{mHeaderDetails>/Statusdesc}" class="sapUiSmallMarginBegin"/>
					</HBox>
				</VBox>
			</HBox>
			<HBox class="sapUiSizeCompact sapUiSmallMarginBegin">
				<core:Icon id="InvoiceReceiptIcon" src="sap-icon://circle-task-2" class="InvoiceReceiptCSS"/>
				<VBox class="dotline invoicedashlineColor"></VBox>
				<VBox class="InvoiceReceiptVBOX sapUiSmallMarginBottom sapUiTinyMarginBegin">
					<Label text="Invoice Receipt" design="Bold"/>
					<HBox>
						<Label text="Date :"/>
						<Text text="22.04.2021" class="sapUiSmallMarginBegin"/>
					</HBox>
					<HBox>
						<Label text="PO Status :"/>
						<Text text="{mHeaderDetails>/Statusdesc}" class="sapUiSmallMarginBegin"/>
					</HBox>
				</VBox>
			</HBox>
			<HBox class="sapUiSizeCompact sapUiSmallMarginBegin">
				<core:Icon src="sap-icon://circle-task-2" class="PaymentCSS"/>
				<VBox class="PaymentVBOX sapUiSmallMarginBottom sapUiTinyMarginBegin">
					<Label text="Payment" design="Bold"/>
					<HBox>
						<Label text="Date :"/>
						<Text text="23.04.2021" class="sapUiSmallMarginBegin"/>
					</HBox>
					<HBox>
						<Label text="PO Status :"/>
						<Text text="{mHeaderDetails>/Statusdesc}" class="sapUiSmallMarginBegin"/>
					</HBox>
				</VBox>
			</HBox>
		</content>
	</Dialog>
</core:FragmentDefinition>