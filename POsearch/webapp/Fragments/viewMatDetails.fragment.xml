<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Popover class="inctureviewGroupFrag" showHeader="false">
		<VBox items="{matModel>/results}">
			<f:SimpleForm editable="false" layout="ResponsiveGridLayout" title="Material Details" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
				labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
				singleContainerFullSize="false">
				<f:content>
					<Label text="Material" class="RDSLabel"/>
					<Text text="{matModel>Material}"/>
					<Label text="Material Description" class="RDSLabel"/>
					<Text text="{matModel>MaterialDescription}"/>
					<Label text="Material Group" class="RDSLabel"/>
					<Text text="{matModel>MaterialGroup}"/>
					<Label text="Material Group Desc" class="RDSLabel"/>
					<Text text="{matModel>MaterialGroupDesc}"/>
					<Label text="Vendor Material" class="RDSLabel"/>
					<Text text="{matModel>VendorMaterial}"/>
					<Label text="Purchase Uom" class="RDSLabel"/>
					<Text text="{matModel>PurchaseUom}"/>
					<Label text="Unit Price" class="RDSLabel"/>
					<Text text="{matModel>UnitPrice}"/>
				</f:content>
			</f:SimpleForm>
		</VBox>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Close" press="onCloseviewMatDetails" type="Emphasized"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>